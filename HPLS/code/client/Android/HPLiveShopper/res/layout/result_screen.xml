<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" 
    android:background="#FFFFFF">

    <ImageButton
        android:id="@+id/socialsBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="#fff"
        android:src="@drawable/socials" />

    <ScrollView
        android:id="@+id/scVertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/socialsBtn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tvCode"
        android:layout_marginTop="5dp"
         >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
        	android:paddingRight="15dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Story about this product.."
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#0495d5" />

            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Free up desk space with this elegant, slim design. Whether for entertainment or everyday computing, take your overall experience above and beyond with a powerful processor, rich graphics and Full HD1 display."
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="10dp" />
            
            <LinearLayout 
                android:layout_width="match_parent"
            	android:layout_height="wrap_content"
            	android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:id="@+id/llimageButton">
                
                <RelativeLayout 
                        android:layout_width="100dp"
            			android:layout_height="wrap_content"
            			android:id="@+id/rlLocation"
                        >
                    	<ImageButton 
	                        android:id="@+id/ibLocation"
	                        android:layout_height="70dp"
	                        android:layout_width="70dp"
	                        android:layout_centerHorizontal="true"
	                        android:src="@drawable/iconlocation"
	                        android:background="#FFFFFF"
	                        android:onClick="gotoWeb"/>
                </RelativeLayout>
                
                <RelativeLayout 
                    android:layout_width="100dp"
           			android:layout_height="wrap_content"
           			android:id="@+id/rlSpec">
                    	<ImageButton 
	                        android:id="@+id/ibSpec"
	                        android:layout_height="70dp"
	                        android:layout_width="70dp"
	                        android:src="@drawable/iconspec"
	                        android:layout_centerHorizontal="true"
	                        android:background="#FFFFFF"
	                        android:onClick="gotoWeb"/>
                </RelativeLayout>                           
            </LinearLayout>

            <Button
                android:id="@+id/btnVideo"
                android:visibility="gone"
                android:layout_width="132dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:background="#0096d6"
                android:minHeight="50dip"
                android:minWidth="320dip"
                android:onClick="gotoWeb"
                android:text="Video"
                android:textAlignment="center"
                android:textColor="#fff" />
            
            <ScrollView
                android:id="@+id/scHorizontal"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp">
                <LinearLayout 
                    android:orientation="horizontal"
                    android:layout_height="wrap_content"
                	android:layout_width="match_parent"
                	android:id="@+id/lLRelatedPic">
                 
                </LinearLayout>
            </ScrollView>

        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/rlPic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp" >
        
	    <ImageView
	        android:id="@+id/ivBlueBackground"
	        android:layout_width="150dp"
	        android:layout_height="150dp"
	        android:layout_centerInParent="true"
	        android:background="#0096d6" />
	    <ImageView
	        android:id="@+id/ivWhiteBackground"
	        android:layout_width="130dp"
	        android:layout_height="130dp"
	        android:layout_centerInParent="true"
	        android:background="#FFFFFF"
	        android:layout_margin="10dp" />
	    <ImageView
	        android:id="@+id/ivImageProduct"
	        android:layout_width="130dp"
	        android:layout_height="130dp"
	        android:layout_centerInParent="true"
	        android:background="#FFFFFF"
	        android:onClick="gotoWeb" />

	    <ImageButton
	        android:id="@+id/ibVideo"
	        android:layout_width="25dp"
	        android:layout_height="25dp"
	        android:layout_alignBottom="@+id/ivWhiteBackground"
	        android:layout_alignRight="@+id/ivWhiteBackground"
	        android:src="@drawable/iconplaybluelayer" 
	        android:onClick="gotoWeb"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/tvPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvPriceLable"
        android:layout_alignLeft="@+id/tvPriceLable"
        android:layout_marginTop="5dp"
        android:text="$989.99"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#d7410b"/>

    <TextView
        android:id="@+id/tvPriceLable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvProdName"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/rlPic"
        android:text="Our Price:"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/tvProdName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/rlPic"
        android:layout_toRightOf="@+id/rlPic"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="5dp"
        android:text="HP Pavilion"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="17dp" />

    <Button
        android:id="@+id/btnBuy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvPrice"
        android:layout_below="@+id/tvPrice"
        android:layout_alignBottom="@+id/rlPic"
        android:layout_marginRight="15dp"
        android:background="#0096d6"
        android:minWidth="140dp"
        android:onClick="gotoWeb"
        android:text="Buy Now"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/rlPic"
        android:layout_below="@+id/rlPic"
        android:layout_marginTop="5dp"
        android:text="Code:"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/tvCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rlPic"
        android:layout_toRightOf="@+id/TextView01"
        android:layout_alignTop="@+id/TextView01"
        android:layout_marginLeft="5dp"
        android:text="FG1237JDF"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#0096d6" />

</RelativeLayout>